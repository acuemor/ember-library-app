{{! template-lint-disable }}

<h1>Contacts </h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
      <th>Messages</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |contacts|}}
    <tr>
      <th>{{contacts.id}}</th>
      <td>{{contacts.email}}</td>
      <td>{{contacts.message}}</td>
      <td><button class="btn btn-danger btn-xs" {{action 'deleteContact' contacts}}>Delete</button></td>
    </tr>
  {{/each}}
  </tbody>
</table>