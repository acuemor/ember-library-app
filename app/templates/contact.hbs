{{! template-lint-disable }}

<h1>Contact Page</h1>

<form>
  <div class="form-group has-feedback {{if model.emailAddressFormat 'has-success'}}">
    <label for="exampleInputEmail1">Email address</label>
    {{input type="email" value=model.email class="form-control" id="contactEmail" aria-describedby="emailHelp" placeholder="Enter email"}}
	{{#if model.emailAddressFormat}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
  </div>
  <div class="form-group has-feedback {{if model.emailAddressSize 'has-success'}}">
    <label for="exampleInputPassword1">Message</label>
    {{textarea value=model.message class="form-control" id="contactTextarea" placeholder="Message"}}
	{{#if model.emailAddressSize}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
  </div>
  <button disabled={{model.isDisabled}} {{action 'saveContactForm' model}} type="submit" class="btn btn-primary">Send</button>
</form>

  <br /><br />

 {{#if responseMessage}}
  <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}
